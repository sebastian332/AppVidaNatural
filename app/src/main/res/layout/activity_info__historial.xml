<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_Historial"
    android:orientation="vertical"
    android:background="#024603"
    >


    <ImageView
        android:layout_width="337dp"
        android:layout_height="190dp"
        android:src="@drawable/logo" />

    <ImageView
        android:onClick="onHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home"/>
    <TextView
        android:textColor="#0B21C2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion Personal"
        android:textSize="35dp"
        />

    <TextView
        android:id="@+id/NombrePaciente"
        android:layout_width="363dp"
        android:layout_height="63dp"
        android:textSize="30dp" />
    <TextView
        android:textColor="#0B21C2"
        android:textSize="30dp"
        android:text="Fecha cita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="25dp"
        android:text="15/10/19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#0B21C2"
        android:textSize="30dp"
        android:text="Motivos de la consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="25dp"
        android:text="Fuerte dolor de cabeza "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#0B21C2"
        android:textSize="30dp"
        android:text="Medico a cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="25dp"
        android:text="Andres Armario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:layout_marginTop="-2dp"
        android:layout_width="77dp"
        android:layout_height="50dp"
        android:src="@drawable/firefox" />

    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/facebook"
        android:layout_width="77dp"
        android:layout_height="50dp" />

    <ImageView
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/twitter"
        android:layout_width="77dp"
        android:layout_height="50dp" />



</LinearLayout>