<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialclinicoPacientes"
    android:orientation="vertical"
    android:background="@color/primary_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="282dp"
                android:background="@color/primary_dark">


                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="155dp"
                    android:src="@drawable/logo"></ImageView>
                <ImageView
                    android:onClick="onHome"
                    android:layout_marginLeft="-30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home"></ImageView>

                <TextView
                    android:textColor="#FFC0E6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-320dp"
                    android:layout_marginTop="170dp"
                    android:text="Bienvenido : "
                    android:textSize="12pt"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-120dp"
                    android:layout_marginTop="220dp"
                    android:id="@+id/viewNombre"
                    android:textSize="15pt"></TextView>

                <ImageView
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="180dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chica"></ImageView>

            </LinearLayout>
            <TextView
                android:textColor="#A50967"
                android:textSize="12pt"
                android:text="Identificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/viewIdentificacion"
                android:textSize="15pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:text="Ubicacion"
                android:textColor="#A50967"
                android:id="@+id/textdirecion"
                android:textSize="15pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:id="@+id/viewDireccion"
                android:textSize="15pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:text="Direccion Correo Elcetronico"
                android:textColor="#A50967"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/Correo"
                android:textSize="12pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/viewCorreo"
                android:textSize="13pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView

                android:textColor="#0D52FD "
                android:layout_marginTop="40dp"
                android:textSize="15pt"
                android:text="Tabla Informativa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_marginTop="28dp"
                android:background="@color/primary_light">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="140dp"
                    android:src="@drawable/carpeta"
                    android:onClick="Hitorialclinico"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-120dp"
                    android:layout_marginTop="100dp"
                    android:text="Historial Clinico"
                    android:textSize="20dp"></TextView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>